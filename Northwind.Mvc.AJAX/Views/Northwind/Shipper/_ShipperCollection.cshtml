@model ShipperCollectionModel

@{
    ViewBag.Title = ShipperResources.EntityPlural;
}

<div id="Shipper_Title">
    <h3>@ViewBag.Title</h3>
</div>

@(Html.EJ().Grid<Shipper>("Grid_Shipper")
    .Datasource(datasource => datasource
        .Adaptor(AdaptorType.UrlAdaptor)
        .URL(Url.Content("~/Shipper/DataSource"))
    )
    .AllowFiltering()
    .AllowGrouping()
    .AllowPaging()
    .AllowResizing()
    .AllowScrolling()
    .AllowSearching()
    .AllowSorting()
    .ClientSideEvents(clientEvent => clientEvent
        .ActionBegin("actionBegin_Grid_Shipper")
        .ActionFailure("actionFailure_Grid_Shipper")
        .Load("load_Grid_Shipper")
        .ToolbarClick("toolbarClick_Grid_Shipper")
    )
    .Columns(column =>
    {
        column.Field("ShipperId")
            .AllowEditing(false)
            .EditType(EditingType.Numeric)
            .Format(SyncfusionPatternResources.GridFormat_Integer)
            .HeaderText(ShipperResources.PropertyShipperId)
            .IsIdentity(true)
            .IsPrimaryKey(true)
            .TextAlign(TextAlign.Right)
            .Visible(false)
            .Width(100)
            .Add();
        column.Field("CompanyName")
            .EditType(EditingType.String)
            .HeaderText(ShipperResources.PropertyCompanyName)
            .Visible(true)
            .Width(240)
            .Add();
        column.Field("Phone")
            .EditType(EditingType.String)
            .HeaderText(ShipperResources.PropertyPhone)
            .Visible(true)
            .Width(240)
            .Add();
    })
    .EditSettings(edit => edit
        .AllowAdding()
        .AllowDeleting()
        .AllowEditing()
    )
    .EnablePersistence()
    .FilterSettings(filter => filter
        .EnableCaseSensitivity(false)
        .FilterType(FilterType.Excel)
        .MaxFilterChoices(System.Int32.MaxValue)
    )
    .Mappers(map => map
        .ExportToExcelAction(Url.Content("~/Shipper/ExportToExcel"))
        .ExportToPdfAction(Url.Content("~/Shipper/ExportToPdf"))
        .ExportToWordAction(Url.Content("~/Shipper/ExportToWord"))
    )
    .PageSettings(page => page
        .PageSize(AppDefaults.SyncfusionRecordsByPage)
    )
    .SearchSettings(search =>
    {
        search.Fields(field =>
        {
            //field.Add("ShipperId");
            field.Add("CompanyName");
            field.Add("Phone");
        });
    })
    .ShowColumnChooser()
    .ToolbarSettings(toolbar => toolbar
        .CustomToolbarItems(new List<object>() {
            new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Toolbar_Grid_Shipper" }
        })
        .ShowToolbar()
        .ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Search);
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.Delete);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PdfExport);
            items.AddTool(ToolBarItems.WordExport);
        })
    )
)

@Html.OperationResult(Model.OperationResult)

<script type="text/x-jsrender" id="Toolbar_Grid_Shipper">
    <div id="Toolbar_Grid_Shipper_Read" class="e-toolbaricons e-icon e-document" title="@PresentationResources.Read"></div>
</script>

<script>
    $(function () {
        try {
            var model = function () { return @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)); }();
    
            ej.widget.init($("#Ajax"));
            var title = $("#Shipper_Title");       

            var gridShipper = $("#Grid_Shipper");
            var ejGridShipper = gridShipper.data("ejGrid");
    
            if (ejGridShipper.model.filterSettings.filteredColumns.length != 0) {
                ejGridShipper.clearFiltering();
            }
                
            if (!model.IsMasterDetail) {
                title.css("display", "block");
                $(document).prop("title", "@Html.Raw(AppHelper.DocumentTitle(ViewBag.Title))");
                
                ejGridShipper.setModel({
                    allowGrouping: true,
                    toolbarSettings: {
                        showToolbar: true,
                        toolbarItems: [
                            ej.Grid.ToolBarItems.Search,
                            ej.Grid.ToolBarItems.Add,
                            ej.Grid.ToolBarItems.Edit,
                            ej.Grid.ToolBarItems.Delete,
                            ej.Grid.ToolBarItems.ExcelExport,
                            ej.Grid.ToolBarItems.PdfExport,
                            ej.Grid.ToolBarItems.WordExport
                        ]                    
                    }
                });
            } else {
                title.css("display", "none");
    
                ejGridShipper.setModel({
                    allowGrouping: false,
                    toolbarSettings: {
                        showToolbar: true,
                        toolbarItems: [
                            ej.Grid.ToolBarItems.Add,
                            ej.Grid.ToolBarItems.Edit,
                            ej.Grid.ToolBarItems.Delete
                        ]                    
                    }
                });
            }
        } catch (exception) {
            alert(zExceptionMessage("_ShipperCollection.cshtml", "function()", exception));
        }                
    });
    
    function actionBegin_Grid_Shipper(args) {
        try {
            var model = function () { return @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)); }();
            var masterControllerAction = model.MasterControllerAction == null ? "" : model.MasterControllerAction.toLowerCase();
    
            // Associations (FK)
            var url = "";

            if (masterControllerAction == "" || masterControllerAction == "update") {
                switch(args.requestType) {
                    case "add":
                        // Create
                        if (model.IsSecurityOperations.IsCreate) {
                            $("#Ajax").load("@(Url.Action("Create", "Shipper", null, Request.Url.Scheme))" + (url == "" ? "" : "?") + url);
                        }
                        break;
                    case "read":
                        // Read
                        if (model.IsSecurityOperations.IsRead) {
                            var data = args.data;
                            if (!ej.isNullOrUndefined(data)) {
                                $("#Ajax").load("@(Url.Action("Read", "Shipper", null, Request.Url.Scheme))?ShipperId=" + String(data.ShipperId) + (url == "" ? "" : "&") + url);
                            }
                        }
                        break;                        
                    case "beginedit":
                        // Update
                        if (model.IsSecurityOperations.IsUpdate) {
                            var data = this.model.currentViewData[args.rowIndex];
                            if (!ej.isNullOrUndefined(data)) {
                                $("#Ajax").load("@(Url.Action("Update", "Shipper", null, Request.Url.Scheme))?ShipperId=" + String(data.ShipperId) + (url == "" ? "" : "&") + url);
                            }
                        }
                        break;
                    case "delete":
                        // Delete
                        if (model.IsSecurityOperations.IsDelete) {
                            var data = args.data;
                            if (!ej.isNullOrUndefined(data)) {
                                $("#Ajax").load("@(Url.Action("Delete", "Shipper", null, Request.Url.Scheme))?ShipperId=" + String(data.ShipperId) + (url == "" ? "" : "&") + url);
                            }
                        }
                        break;
                }
            }

            if (args.requestType == "add" || args.requestType == "beginedit" || args.requestType == "delete") {
                args.cancel = true;
            }
        } catch (exception) {
            alert(zExceptionMessage("_ShipperCollection.cshtml", "actionBegin_Grid_Shipper(args)", exception));
        }            
    }
    
    function actionFailure_Grid_Shipper(args) {
        try {
            alert(zErrorMessage(args.error.responseText));
        } catch (exception) {
            alert(zExceptionMessage("_ShipperCollection.cshtml", "actionFailure_Grid_Shipper(args)", exception));
        }
    }    

    function load_Grid_Shipper(args) {
        try {            
            var culture = "@System.Globalization.CultureInfo.CurrentCulture.Name";
            this.model.locale = culture;
        } catch (exception) {
            alert(zExceptionMessage("_ShipperCollection.cshtml", "load_Grid_Shipper(args)", exception));
        }
    }

    function toolbarClick_Grid_Shipper(sender) {
        try {
            var toolbar = $(sender.target);
            var gridShipper = $("#Grid_Shipper");
            var ejGridShipper = gridShipper.data("ejGrid");

            if (toolbar.attr("id") == "Toolbar_Grid_Shipper_Read") {
                var records = ejGridShipper.getSelectedRecords();
                if (records.length == 1) {
                    var args = { requestType: "read", data: records[0] };
                    actionBegin_Grid_Shipper(args)
                }
            }
        } catch (exception) {
            alert(zExceptionMessage("_ShipperCollection.cshtml", "toolbarClick_Grid_Shipper(sender)", exception));
        }
    }
</script>
